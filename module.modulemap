module CCryptoLinux [system] {
    header "/usr/include/openssl/conf.h"
    header "/usr/include/openssl/evp.h"
    header "/usr/include/openssl/err.h"
    header "/usr/include/openssl/bio.h"
    header "/usr/include/openssl/ssl.h"
    header "/usr/include/openssl/md4.h"
    header "/usr/include/openssl/md5.h"
    header "/usr/include/openssl/sha.h"
    header "/usr/include/openssl/hmac.h"
    header "/usr/include/openssl/rand.h"
    link "ssl"
    link "crypto"
}

module CCryptoOXS [system] {
    header "/usr/local/include/openssl/conf.h"
    header "/usr/local/include/openssl/evp.h"
    header "/usr/local/include/openssl/err.h"
    header "/usr/local/include/openssl/bio.h"
    header "/usr/local/include/openssl/ssl.h"
    header "/usr/local/include/openssl/md4.h"
    header "/usr/local/include/openssl/md5.h"
    header "/usr/local/include/openssl/sha.h"
    header "/usr/local/include/openssl/hmac.h"
    header "/usr/local/include/openssl/rand.h"
    link "ssl"
    link "crypto"
}